{
  "manifest_version": 3,
  "name": "Helpdesk Plus",
  "version": "0.1.0",
  "description": "Pacote de utilidades para o Helpdesk",
  "icons": {
    "16": "src/images/icons/icon_16.jpg",
    "32": "src/images/icons/icon_32.jpg",
    "48": "src/images/icons/icon_48.jpg",
    "128": "src/images/icons/icon_128.jpg"
  },
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service-worker": "src/scripts/background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.wikipedia.org/wiki/Lei-ponte*"
      ],
      "js": [
        "src/addons/helpdesk/chamadoProduto/chamadoProduto.js"
      ],
      "run_at": "document_end"
    }
  ],
  "permissions": [
    "notifications",
    "scripting",
    "storage"
  ],
  "web_accessible_resources": [{
    "resources": ["script.js"],
    "matches": ["<all_urls>"]
  }]
}