{
  "manifest_version": 3,

  "name": "Helpdesk Plus",
  "version": "0.1.0",
  "description": "Pacote de utilidades para o Helpdesk",

  "background": {
    "service_worker": "background.js"
  },

  "action": {
    "default_popup": "popup.html"
  },

  "permissions": ["storage", "activeTab", "scripting", "tabs"],

  "host_permissions": ["<all-urls>"],
  "content_scripts": [
    {
      "css": ["styles.css"],
      "js": ["./addons/helpdesk/ch-produto.js"],
      "matches": ["https://helpdesk.valenet.local/Chamado/View/*"]
    },
    {
      "css": ["styles.css"],
      "js": ["./addons/helpdesk/ch-cliente.js"],
      "matches": ["https://www.youtube.com/watch?v=*"]
    }
  ]
}
