{
  "manifest_version": 3,
  "name": "Helpdesk Plus",
  "version": "0.1.0",
  "description": "Pacote de utilidades para o Helpdesk",

  "background": {
    "service_worker": "background.js"
  },

  "action": {
    "default_popup": "popup.html"
  },

  "host_permissions": ["<all-urls>"],
  "content_scripts": [
    {
      "matches": [
        "https://*.wikipedia.org/wiki/Lei-ponte*"
      ],
      "js": [
        "src/addons/helpdesk/chamadoProduto/chamadoProduto.js"
      ],
      "run_at": "document_end"
    }
  ],
  "permissions": [
    "notifications",
    "scripting",
    "storage"
  ],
  "web_accessible_resources": [{
    "resources": ["script.js"],
    "matches": ["<all_urls>"]
  }]
}